

<section id="home" class="intro-section">
  <div clas="container">
    <div class="row align-items-center text-white">
      <div class="col-md-6 intros">
        <h1 class="intro">
          <span class="display2--intro">
            Albums
          </span>
          <span class="display2--description lh-base">
           the image hosting service
          </span>
        </h1>
        <button type="button" class="rounded-pill btn-rounded"> Upload one 
          <span>
            <%= icon('fa-solid', 'upload') %>
          </span>
        </button>

      </div>
      <div class="col-md-6 intros text-end">
        <div class="video-box">
        <% if @picture %>
          <%= image_tag @picture.file, id: 'rescently_uploaded' %>
        <% else %>
          <%= image_tag "stub.jpg", id: 'stub' %>
        <% end %>
        <%= link_to("#", class: 'glightbox position-absolute top-50 start-50 translate-middle') do %>
          <span><%= icon('fa-solid', 'play-circle') %></span>
          <span class="border-animation border-animation--border-1"></span>
          <span class="border-animation border-animation--border-2"></span>
        <%end%>
        </div>
      </div>
    </div>
  </div>
 
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
  <path fill="#ffffff" fill-opacity="1" d="M0,192L80,165.3C160,139,320,85,480,90.7C640,96,800,160,960,181.3C1120,203,1280,181,1360,170.7L1440,160L1440,320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z"></path>
</svg>
</section>

<section id="companies" class="companies">
  <div class="container">
      <div class="row text-center">
        <h4 class="fw-bold lead mb-3">Kind of trusted by</h4> 
        <div class="heading-line"> </div>
        <p class="fw-light"> Different people</p>
      </div>
</section>

<section id="services" class="our-services">
  <div class="container">
    <div class="row">
      <div class="row text-center">
        <h1 class="display-3 fw-bold">Our Services</h1>
        <div class="heading-line mb-1">
        </div>
      </div>
    </div>
  </div>
<div class="container">
   <div class="row pt-2 pb-2 mt-0 mb-3">
      <div class="col-md-6 border-right">
         <div class="bg-white p-3">
          <h2 class="fw-bold  text-capitalize text-center">
            Picture Upload
          </h2>
         </div>
      </div>
      <div class="col-md-6">
        <div class="bg-white p-4 text-start">
          <p class="fw-light"> Why not upload yours?</p>
        </div>
      </div>
   </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 services mt-4 text-start" >
      <div class="services__content">
        <%= icon('fa-solid', 'circle-user') %>
        <h3 class="display-3--title mt-1">Users uploads</h3>
        <p class="lh-lg">
          You can browse pictures, uploaded by the particular user
        </p>
      </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 services mt-4 text-end" >
      <div class="services__content">
      Randomized list of usernames
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 services mt-4 text-start" >
      <div class="services__content">
        <%= icon('fa-solid', 'hashtag') %>
        <h3 class="display-3--title mt-1">Tags</h3>
        <p class="lh-lg">
          You can browse pictures by tags and tag your own
        </p>      
      </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 services mt-4 text-end" >
      <div class="services__content">
      tags list, sorted by the name
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 services mt-4 text-start" >
      <div class="services__content">
        <%= icon('fa-solid', 'star') %>
        <h3 class="display-3--title mt-1">Popular</h3>
        <p class="lh-lg">
          Soon, you could browse pictures by popularity
        </p>   
      </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 services mt-4 text-end" >
      <div class="services__content">
        List of links to some random pictures pages
      </div>
    </div>
  </div>
</div>
</section>
